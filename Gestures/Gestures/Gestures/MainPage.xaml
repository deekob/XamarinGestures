<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Gestures"
             xmlns:customControls="clr-namespace:Gestures.CustomControls;assembly=Gestures"
             x:Class="Gestures.MainPage">

   <StackLayout HorizontalOptions="Center" VerticalOptions="Center">

        <Label Text="Welcome to Xamarin Forms!" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />

        <customControls:CustomLabel Text="Custom Control FTW" 
                                VerticalOptions="Center" 
                                HorizontalOptions="Center"/>
       
       <customControls:CustomButton Text="Hit Me"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"/>

        <customControls:CustomSlider  VerticalOptions="Center"
                                    HorizontalOptions="Center"/>

    </StackLayout>

</ContentPage>